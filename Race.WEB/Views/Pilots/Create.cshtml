@model Race.DATA.Models.Pilots

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Pilots</h4>
<hr />
<div class="row">
    <div class="col-md">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="card">
                <div class="card-header">Piloto</div>
                <div class="card-body">
                    <div>
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="form-group col-md">
                                <label asp-for="Age" class="control-label"></label>
                                <input asp-for="Age" class="form-control" />
                                <span asp-validation-for="Age" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md">
                                <label asp-for="Genre" class="control-label"></label>
                                <input asp-for="Genre" class="form-control" />
                                <span asp-validation-for="Genre" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-header">Carro</div>
                <div class="card-body">
                    <div class="form-group col-md">
                        <label asp-for="Equip" class="control-label"></label>
                        <input asp-for="Equip" class="form-control" />
                        <span asp-validation-for="Equip" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md">
                        <label asp-for="Model" class="control-label"></label>
                        <input asp-for="Model" class="form-control" />
                        <span asp-validation-for="Model" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-success m-2" />
            </div>
        </form>
    </div>
</div>
<div class="col-md">
    <a class="btn btn-secondary m-1" asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
