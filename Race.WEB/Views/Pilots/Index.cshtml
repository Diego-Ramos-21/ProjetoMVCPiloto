@model IEnumerable<Race.DATA.Models.Pilots>

@{
    ViewData["Title"] = "Index";
}

<h1>Pilotos</h1>

<p>
    <a class="btn btn-primary m-2" asp-action="Create">Adicionar piloto</a>
</p>
<table id="tPilots" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Equip)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Model)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Equip)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-info m-1" asp-route-id="@item.Id">Editar</a>
                <!-- Gatilho do botão modelo -->
                <button type="button" class="btn btn-danger m-1" data-bs-toggle="modal" data-bs-target="#deleteModal-@item.Id">
                    Excluir
                </button>
                <!-- Modelo -->
                <div class="modal fade" id="deleteModal-@item.Id" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
                  <div class="modal-dialog">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title" id="deleteModalLabel">Excluir Piloto</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                      </div>
                      <div class="modal-body">
                          Deseja relamente deletar o item @item.Name?
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Não</button>
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Sim</a>
                      </div>
                    </div>
                  </div>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
@section Scripts 
{
    <script>
        $(document).ready(function() {
            $('#tPilots').DataTable( {
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Portuguese-Brasil.json"
                }
            } );
        } );
    </script>
}
